@using UPD8.CSharp.Infrastructure.Entities.EF
@model UPD8.CSharp.Infrastructure.Entities.EF.CustomerEntity

@{
    ViewData["Title"] = "Atualizar Cliente";
    var customer = ViewData["Customer"] as CustomerEntity;
}
<div class="container">
    <div class="row jumbotron" style="padding: 10px;">
        <div class="col-12">
            <p>
                <b>@ViewData["Title"]</b>
            </p>
        </div>

        <form class="row" asp-action="UpdateForm" asp-controller="Customer" method="post">
            <div class="col-12 col-md-3">
                <label>CPF</label>
                <input asp-for="Document" type="text" class="form-control" value="@customer.Document" id="ValidationDocument" ame="ValidationDocument" onkeydown="javascript: fMasc( this, mCPF );" required maxlength="14" />
            </div>

            <div class="col-12 col-md-3">
                <label>Nome</label>
                <input asp-for="Name" type="text" class="form-control" value="@customer.Name" required maxlength="50" />
            </div>

            <div class="col-12 col-md-3">
                <label>Data Nascimento</label>
                <input asp-for="Birth" type="date" class="form-control" value="@customer.BirthText" required />
            </div>

            <div class="col-12 col-md-3">
                <label>Sexo</label>
                <input asp-for="Gender" type="text" class="form-control" value="@customer.Gender" required maxlength="1" />
            </div>

            <div class="col-12 col-md-6">
                <label>Endereço</label>
                <input asp-for="Address" type="text" class="form-control" value="@customer.Address" required maxlength="250" />
            </div>

            <div class="col-12 col-md-3">
                <label>Estado</label>
                <input asp-for="State" type="text" class="form-control" value="@customer.State" required maxlength="50" />
            </div>

            <div class="col-12 col-md-3">
                <label>Cidade</label>
                <input asp-for="City" type="text" class="form-control" value="@customer.City" required maxlength="100" />
            </div>
            <div class="col-12" style="margin-top: 10px;">
                <input asp-for="Id" type="hidden" class="form-control" value="@customer.Id" />
                <button type="submit" class="btn btn-primary">
                    Atualizar
                </button>
                <a type="button" class="btn btn-secondary" style="margin-left:5px;" asp-controller="Customer" asp-action="Update" asp-route-id="@customer.Id">
                    Limpar
                </a>
                <a type="button" class="btn btn-secondary" style="margin-left:5px;" asp-controller="Customer" asp-action="Index">
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function ValidateDocument() {
        var ValidationDocument = document.getElementById("ValidationDocument").value;
        var cpfValido = /^(([0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2})|([0-9]{11}))$/;
    }
    function fMasc(objeto, mascara) {
        obj = objeto
        masc = mascara
        setTimeout("fMascEx()", 1)
    }

    function fMascEx() {
        obj.value = masc(obj.value)
    }

    function mCPF(cpf) {
        cpf = cpf.replace(/\D/g, "")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d{1,2})$/, "$1-$2")
        return cpf
    }
</script>
