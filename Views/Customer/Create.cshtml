@using UPD8.CSharp.Infrastructure.Entities.EF
@model UPD8.CSharp.Infrastructure.Entities.EF.CustomerEntity

@{
    ViewData["Title"] = "Criar Cliente";
    var customer = ViewData["Customer"] as CustomerEntity;
}
<div class="container">
    <div class="row jumbotron" style="padding: 10px;">
        <div class="col-12">
            <p>
                <b>@ViewData["Title"]</b>
            </p>
        </div>

        <form class="row" asp-action="CreateForm" asp-controller="Customer" method="post">
            <div class="col-12 col-md-3">
                <label for="Document">CPF</label>
                <input asp-for="Document" type="text" class="form-control" id="ValidationDocument"
                    ame="ValidationDocument" onkeydown="javascript: fMasc( this, mCPF );" required maxlength="14" />
            </div>

            <div class="col-12 col-md-3">
                <label for="Name">Nome</label>
                <input asp-for="Name" type="text" class="form-control" required maxlength="50" />
            </div>

            <div class="col-12 col-md-3">
                <label for="Birth">Data Nascimento</label>
                <input asp-for="Birth" type="date" class="form-control" required />
            </div>

            <div class="col-12 col-md-3">
                <label for="Gender">Sexo</label>
                <div class="input-group mb-3">
                    <select class="custom-select" asp-for="Gender" required>
                        <option>Selecione</option>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                    </select>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <label for="Address">Endereço</label>
                <input asp-for="Address" type="text" class="form-control" required maxlength="250" />
            </div>

            <div class="col-12 col-md-3">
                <label for="State">Estado</label>
                <div class="input-group mb-3">
                    <select class="custom-select" asp-for="State" required>
                        <option>Selecione</option>
                        <option>AC</option>
                        <option>AL</option>
                        <option>AP</option>
                        <option>AM</option>
                        <option>BA</option>
                        <option>CE</option>
                        <option>DF</option>
                        <option>ES</option>
                        <option>GO</option>
                        <option>MA</option>
                        <option>MS</option>
                        <option>MT</option>
                        <option>MG</option>
                        <option>PA</option>
                        <option>PB</option>
                        <option>PR</option>
                        <option>PE</option>
                        <option>PI</option>
                        <option>RJ</option>
                        <option>RN</option>
                        <option>RS</option>
                        <option>RO</option>
                        <option>RR</option>
                        <option>SC</option>
                        <option>SP</option>
                        <option>SE</option>
                        <option>TO</option>
                    </select>
                </div>
            </div>

            <div class="col-12 col-md-3">
                <label for="City">Cidade</label>
                <input asp-for="City" type="text" class="form-control" required maxlength="100" />
            </div>
            <div class="col-12" style="margin-top: 10px;">
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
                <a class="btn btn-secondary" style="margin-left:5px;" asp-controller="Customer" asp-action="Create">
                    Limpar
                </a>
                <a class="btn btn-secondary" style="margin-left:5px;" asp-controller="Customer" asp-action="Index">
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function ValidateDocument() {
        var ValidationDocument = document.getElementById("ValidationDocument").value;
        var cpfValido = /^(([0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2})|([0-9]{11}))$/;
    }
    function fMasc(objeto, mascara) {
        obj = objeto
        masc = mascara
        setTimeout("fMascEx()", 1)
    }

    function fMascEx() {
        obj.value = masc(obj.value)
    }

    function mCPF(cpf) {
        cpf = cpf.replace(/\D/g, "")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d)/, "$1.$2")
        cpf = cpf.replace(/(\d{3})(\d{1,2})$/, "$1-$2")
        return cpf
    }
</script>